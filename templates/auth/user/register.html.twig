{% extends 'layouts/base.html.twig' %}{% block title %}Inscription{% endblock %}{% block body %}    <ul class="breadcrumb">        <li><a href="{{ path('app_home') }}"><i class="fa fa-home"></i></a></li>        <li><a href="{{ path('app_account_my_account') }}">Compte</a></li>        <li><a href="{{ path('app_auth_user_register') }}">S'inscrire</a></li>    </ul>    {% include 'layouts/partials/_flash.html.twig' %}    <div class="row">        <div id="content" class="col-sm-12">            <div class="page-login">                <div class="account-border">                    <div class="row">                        <div class="col-sm-6 new-customer">                            <div class="well">                                <h2><i class="fa fa-file-o" aria-hidden="true"></i> vous êtes client chez nous</h2>                                <p>Connecter vous à votre compte, pour faire vos achats plus rapidement, consulter l'état d'une commande et suivre les commandes que vous avez passées précédemment.</p>                            </div>                            <div class="bottom-form">                                <a href="{{ path("app_auth_user_login") }}" class="btn btn-default pull-right">Continuer</a>                            </div>                        </div>                        {{ form_start(form) }}                            <div class="col-sm-6 customer-login">                                <div class="form-group">                                    <label class="control-label" for="{{ form.email.vars.id }}">{{ form.email.vars.label }}</label>                                    {{ form_widget(form.email) }}                                    {{ form_errors(form.email) }}                                </div>                                <div class="form-group">                                    <label class="control-label" for="{{ form.phone.vars.id }}">{{ form.phone.vars.label }}</label>                                    {{ form_widget(form.phone) }}                                    {{ form_errors(form.phone) }}                                </div>                                {% for value in form.password.children %}                                    <div class="form-group">                                        <label class="control-label" for="{{ value.vars.id }}">{{ value.vars.label }}</label>                                        {{ form_widget(value) }}                                        {{ form_errors(value) }}                                    </div>                                {% endfor %}                                <div class="bottom-form">                                    <div class="pull-right">J'ai lu et j'accepte les tableaux de tarification <a href="#" class="agree"><b>tableaux de tarification</b></a>                                        <input class="box-checkbox" type="checkbox" name="agree" value="1"> &nbsp;                                        <input type="submit" value="S'inscrire" class="btn btn-primary">                                    </div>                                </div>                            </div>                        {{ form_end(form) }}                    </div>                </div>            </div>        </div>    </div>{% endblock %}